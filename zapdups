#!/bin/bash

# define usage function
usage(){
    echo -e "usage: zapdups [-h] [-uv] [-k column] file

Author: Colby Chiang (cc2qe@virginia.edu)
Description: Removes duplicate lines that occur consecutively in a file

positional arguments:
  file\tassumes that duplicate entries in column k are
\tconsecutive. If not, use the -u flag. (default is stdin)

optional arguments:
  -h\tshow this message and exit
  -k\tkey column for matches (default: 0, for full line match)
  -u\tdon't assume duplicates are consecutive (uses more memory)
  -v\tonly print duplicates (duplicates must occur consecutively in file"

    exit 1
}

# set default values
k=0
unsorted=false
inverse=false

# process command line args
while getopts huk:v opt
do
    case "$opt" in
	h) usage;;
	u) unsorted=true;;
	k) k=$OPTARG;;
	v) inverse=true;;
	\?) usage;;
    esac
done

# set the last arg as the positional arg for input
input=${@:$OPTIND:1}

# if no pipe and no input arg, then print usage and exit
if [[ -t 0 && $input == "" ]]
then
    usage
fi

# if input is unsorted, make an array to store entries
# that have already been visited, and only print if next
# entry is not in the array
if $unsorted
then
    if $inverse
    then
	echo -e "error: duplicates must occur consecutively for -v option"
	usage
    else
	awk -F, "!_[\$${k}]++" FS="\t" $input
    fi

# if input file is sorted, only check the previous entry
# for a match
else
    if $inverse
    then
	awk "BEGIN { FIRSTMATCH=0 } { if (\$${k}==PREVK) { if (FIRSTMATCH) { print \$PREVLINE; FIRSTMATCH=0 } print \$0; } else FIRSTMATCH=1; PREVK=\$${k}; PREVLINE=\$0 }" $input
    else
	awk "{if (\$${k}!=PREV) print \$0; PREV=\$${k}}" $input
    fi
fi

# exit cleanly
exit 0
